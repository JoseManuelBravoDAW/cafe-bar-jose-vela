---
const eventos = [
  { titulo: "Cenas de empresa", src: "/fotoeventos1.jpg" },
  { titulo: "Bodas y celebraciones", src: "/fotoeventos2.JPG" },
  { titulo: "Reuniones", src: "/fotoeventos3.JPG" },
  { titulo: "Fiestas privadas", src: "/fotoeventos4.JPG" },
];
---

<div class="eventos-container">
  <h1>EVENTOS</h1>
  <div class="grid-eventos">
    {eventos.map((evento) => (
      <div class="evento">
        <img src={evento.src} alt={evento.titulo} class="imagen-evento" />
        <div class="overlay">
          <p class="titulo-overlay">{evento.titulo}</p>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  h1 {
    font-size: 3rem; /* Aumentamos el tamaño del título */
    margin-bottom: 1rem;
  }
  .eventos-container {
    text-align: center;
    padding: 40px;
    background: #f9f5f1;
  }

  .titulo-eventos {
    font-size: 2rem;
    margin-bottom: 20px;
    font-weight: bold;
  }

  .grid-eventos {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
    max-width: 800px;
    margin: auto;
  }

  .evento {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
  }

  .imagen-evento {
    width: 100%;
    height: auto;
    display: block;
  }

  .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(105, 15, 15, 0.4);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .evento:hover .overlay {
    opacity: 1;
  }

  .titulo-overlay {
    color: white;
    font-size: 1.2rem;
    font-weight: bold;
  }
</style>

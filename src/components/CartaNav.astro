    <a class="category-link" href="/carne">Carnes</a>
    <a class="category-link" href="/pescado">Pescado</a>
    <a class="category-link" href="/molletes">Molletes</a>
</nav>

<script type="module">
    document.addEventListener('DOMContentLoaded', () => {
        const categoryLinks = document.querySelectorAll('.category-link');
        const currentPath = window.location.pathname; // Detecta la URL actual

        categoryLinks.forEach((link) => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active'); // Activa el enlace correcto
            } else {
                link.classList.remove('active'); // Elimina la clase de los demás
            }
        });
    });
</script>

